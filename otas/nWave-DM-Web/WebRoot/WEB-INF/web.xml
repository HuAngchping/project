<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml,
      /WEB-INF/struts-config-profile.xml,
      /WEB-INF/struts-config-device.xml,
      /WEB-INF/struts-config-carrier.xml,
      /WEB-INF/struts-config-model.xml,
      /WEB-INF/struts-config-jobs.xml,
      /WEB-INF/struts-config-bootstrap.xml,
      /WEB-INF/struts-config-notification.xml,
      /WEB-INF/struts-config-fota.xml,
      /WEB-INF/struts-config-security.xml,
      /WEB-INF/struts-config-autoreg.xml,
      /WEB-INF/struts-config-ota.xml,
      /WEB-INF/struts-config-sms.xml,
      /WEB-INF/struts-config-audit.xml,
      /WEB-INF/struts-config-software.xml,
      /WEB-INF/struts-config-reports.xml,
      /WEB-INF/struts-config-favorite.xml</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>3</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>3</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>XFireServlet</servlet-name>
    <servlet-class>org.codehaus.xfire.transport.http.XFireConfigurableServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
    <!-- OMA Download Servlet for Software -->
    <servlet>
        <servlet-name>com.npower.dl.SoftwareDownloadServlet</servlet-name>
        <servlet-class>com.npower.dl.SoftwareDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.npower.dl.SoftwareDownloadServlet</servlet-name>
        <url-pattern>/download/*</url-pattern>
    </servlet-mapping>

  <filter>
    <filter-name>com.npower.servlet.PerformanceServletFilter</filter-name>
    <filter-class>com.npower.servlet.PerformanceServletFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>com.npower.servlet.PerformanceServletFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>com.npower.servlet.I18nServletFilter</filter-name>
    <filter-class>com.npower.servlet.I18nServletFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>com.npower.servlet.I18nServletFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>com.npower.dm.action.PersistentManager</filter-name>
    <filter-class>com.npower.dm.action.PersistentManager</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>com.npower.dm.action.PersistentManager</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>com.npower.servlet.StrutsMenuFilter</filter-name>
    <filter-class>com.npower.servlet.StrutsMenuFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>com.npower.servlet.StrutsMenuFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>XFireServlet</servlet-name>
    <url-pattern>/soap/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/jsp/welcome.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <error-page>
    <error-code>403</error-code>
    <location>/jsp/common/login.jsp</location>
  </error-page>
  <!-- 
  <taglib>
    <taglib-uri>http://displaytag.sourceforge.net/</taglib-uri>
    <taglib-location>/WEB-INF/displaytag-11.tld</taglib-location>
  </taglib>
-->
</web-app>

